{
  "compilerOptions": {
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "target": "es2024",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": ["DOM", "ES2024", "ESNext.Error"]
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
